{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "Node",
    "types": [
      "@typescript-to-lua/language-extensions"
    ],
    "strict": true,
    "rootDir": "Source/Script",
    "outDir": "Content/Script",
    "sourceMap": true
  },
  "tstl": {
    "luaTarget": "5.4"
  }
}